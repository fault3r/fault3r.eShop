
@using fault3r_Presentation.Models.ViewModels.Accounts
@model SignInViewModel

@{
    ViewData["Title"] = "ورود کاربر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/accounts.css" />
}

<div class="accounts">
    <div class="accounts-content">
        <div class="content">
            <i class="fa fa-user-circle"></i>
            <span class="title">ورود کاربر</span>            
            <form asp-controller="Accounts" asp-action="SignIn" method="post">
                <span>ایمیل:</span>              
                <input asp-for="Email" autocomplete="off" />                                
                <i class="fa fa-envelope-o"></i><br />  
                <span>کلمه عبور:</span>
                <input asp-for="Password" type="password" />
                <i class="fa fa-key"></i><br />                                  
                <div class="terms">
                    <input asp-for="Persistent" id="Persistent" checked />
                    <label for="Persistent">مرا بخاطر بسپار</label>                                      
                </div>
                <button>ورود</button>
                <div class="validation" asp-validation-summary="All"></div>
            </form>
            <div>
                <span>حساب کاربری ندارید؟</span>
                <a href="/Accounts/SignUp">ثبت نام</a>
            </div>
        </div>
    </div>   
    <div class="accounts-side">
        <div class="side">
            <span class="title">سلام!</span>
            <span class="description">وارد حساب کاربری خود شوید.</span>
        </div>
    </div>
</div>

